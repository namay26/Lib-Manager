<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous" defer></script>
    <title>Document</title>
    <style>
      .right{
        background-color: #444969;
        border: 1px solid #444969;
      }
      .item{
        width:80%;
        text-align: center;
      }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary" data-bs-theme="dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Lib-Manager</a>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/admindashb">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/listbooks">List</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/addbook">Add</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/deletebook">Delete</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" href="/viewrequest">View Request</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/addAdmin">Add Admins</a>
              </li>
            </ul>
            <div>
                <input type="button" class="right" value="Admin" disabled>
            </div>
          </div>
        </div>
      </nav>
      <center>
      <form action="/viewrequest" method="POST">
      <table class="table item table-striped">
        <thead>
          <tr>
            <th scope="col">Username</th>
            <th scope="col">Book Title</th>
            <th scope="col">Book Author</th>
            <th scope="col">Request Date</th>
            <th scope="col">Approve</th>
          </tr>
        </thead>
        <tbody>
          <% request.forEach(function(req) { %>
            <input type="hidden" name="id" value="<%=req.RequestID %>">
          <tr>
            <th scope="row"><%= req.username %></th>
            <td><%= req.title %></td>
            <td><%= req.author %></td>
            <td><%= req.RequestDate %></td>
            <td><button type="submit">Approve</button></td>
          </tr>
          <% }); %>
        </tbody>
        </table>
        </form>
      </center>
</body>
</html>