<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous" defer></script>
    <title>Document</title>
    <style>
      .right{
        background-color: #444969;
        border: 1px solid #444969;
      }
      .item{
        width:80%;
        text-align: center;
      }
      .b{
        margin-left: 0.05in;
        color: white;
        background-color: red;
        border-radius: 0.05in;
      }
    </style>

</head>
<body>
  <nav class="navbar navbar-expand-lg bg-body-tertiary" data-bs-theme="dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Lib-Manager</a>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/clientdash">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/listclient">List</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/reqcheck">Request for Checkout</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/borrowHistory">Borrowing History</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/returnBook">Return Book</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/requestForAdmin">Request for Admin Privileges</a>
          </li>
          <li class="nav-item">
            <a class="nav-link b" href="/logout">LOG-OUT</a>
          </li>
        </ul>
        <div>
          <input type="button" class="right" value="Client" disabled>
        </div>
      </div>
    </div>
  </nav>
    <center>
    <table class="table item table-striped">
      <thead>
        <tr>
          <th scope="col">Title</th>
          <th scope="col">Author</th>
          <th scope="col">Genre</th>
          <th scope="col">Requested Date</th>
          <th scope="col">Accepted Date</th>
          <th scope="col">Return</th>
        </tr>
      </thead>
      <tbody>
        <% request.forEach(function(book) { %>
          <form action="/returnBook" method="POST">
        <tr>
          <input type="hidden" name="id" value="<%= book.RequestID %>">
          <th scope="row"><%= book.title %></th>
          <td><%= book.author %></td>
          <td><%= book.genre %></td>
          <td><%= book.RequestDate %></td>
          <td><%= book.AcceptDate %></td>
          <td><button type="submit" class="btn btn-primary">Return</button></td>
        </tr>
      </form>
        <% }); %>
      </tbody>
      </table>  

      <%= msg%>
    </center>
</body>
</html>